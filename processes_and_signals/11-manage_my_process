#!/usr/bin/env bash
# This script manages the manage_my_process daemon

PID_FILE="/var/run/my_process.pid"

start() {
  ./manage_my_process &
  echo $! > "$PID_FILE"
  echo "manage_my_process started"
}

stop() {
  if [ -f "$PID_FILE" ]; then
    kill "$(cat "$PID_FILE")"
    rm "$PID_FILE"
    echo "manage_my_process stopped"
  fi
}

restart() {
  if [ -f "$PID_FILE" ]; then
    kill "$(cat "$PID_FILE")"
    rm "$PID_FILE"
  fi
  ./manage_my_process &
  echo $! > "$PID_FILE"
  echo "manage_my_process restarted"
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac
